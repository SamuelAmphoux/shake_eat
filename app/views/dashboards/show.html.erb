
<div class="dashboard">
  <h1>👋 Hello <%= @user %></h1>
  <h2>🛒 Shopping list</h2>
  <div class="list_market">
    <% @recipe_ingredients.each do |element| %>
      <div class="market" style="background-color: <%=%w[#f3a175 #c28260 #eaa682].shuffle.first%>">
        <p class="emojie"><%= %w[🍏 🍐 🧄 🧅 🍕 🍗 🍣 🌽 🥑 🍆 🥦 🥬 🥒].shuffle.first %></p>
        <p class="name"><%= element.ingredient.name %></h2>
        <p class="quantity"><%= element.ingredient.quantity.round %> <%= element.ingredient.unit %></p>
      </div>
    <% end %>
  </div>
  <h2>🍛 Mes recettes</h2>
  <div class="list_recipe">
    <% @recipes.each do |recipe| %>
      <div class="recipe">
        <img src="<%= recipe.image_url %>" alt="Recipe image">
        <div class="information">
          <p class="name"><%= recipe.name %></p>
          <p class="price"><%= recipe.price %>€</p>
        </div>
      </div>
    <%end%>
  </div>


  <div class="menu">
    <%= image_tag "svg_file/market.svg"%>
    <%= image_tag "svg_file/home.svg"%>
    <%= link_to new_menu_path do %>
      <%= image_tag "svg_file/plate.svg"%>
    <% end %>
  </div>
</div>

