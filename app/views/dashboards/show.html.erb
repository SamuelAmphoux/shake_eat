<h1>Dashboard</h1>

<div class="double_btn">
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
  </svg>
  <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
    <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
  </svg>
</div>

<div class="recipe_card">
  <div class="recipe_main">
    <%= image_tag 'food.jpg' %>
    <h2 class="recipe_title">Aujourd'hui</h2>
    <%= render "components/icon_recipe_content", recipe: Recipe.last %>
  </div>
  <div class="recipe_description">
    <h2><%=Recipe.last.name%></h2>
    <h3>Ingr√©dients :</h3>
    <ul>
      <% Recipe.last.ingredients.each do |ingredient|%>
        <li><%=ingredient.name%></li>
      <% end %>
    </ul>
  </div>
</div>

<a href='/menus/new' class="btn-primary">
  <p class="btn-text">Generate</p>
  <div class="round_btn">
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
    </svg>
  </div>
</a>
