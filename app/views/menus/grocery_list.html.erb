
<div class="list-container">
  <h1>Your list</h1>
  <% @merged_array_hash.each do |element| %>
    <div class="market_card">
      <% unless element[:image_url].nil? %>
      <%= image_tag(element[:image_url]) %>
      <% end %>
      <div class="market_main">
        <h3 class="market_title"><%= element[:name][0...18].capitalize %></h3>
        <h2 class="market_weight"><%= ((element[:quantity].round * @people)/2)  %> <%= element[:unit] %> </h2>
        <h3 class="market_price"><%= ((element[:price] * @people)/2).round(2) %>€</h3>
      </div>
    </div>
  <% end %>

  <div class="list-footer">

    <h3>Too expensive ? Change your menu !</h3>
    <%= link_to "javascript:history.go(-1)", class: "validation-btn" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>

    <h3>Or Save-eat!</h3>
    <%= link_to root_path, class: "validation-btn" do %>
      <i class="fa-solid fa-arrow-right"></i>
    <% end %>


  <% @sum=0 %>
  <% @ingredients.each do |element| %>
  <% @sum += ((element.ingredient.price * @people)/2) %>
  <% end %>
  <h1 class="total-price">
    Your total is <%= @sum.truncate(2) %>€
  </h1>
</div>
