<div class="show_recipes" data-controller="recipes-hidden">
  <h1>🍛 Menu</h1>

  <div class="menu_bar menu">
    <div class="menu_bar_settings">
    <p class="emojie">🍽️</p>
    <p class="info"><%=@menu.number_of_recipes%></p>
    </div>
    <div class="menu_bar_settings">
      <p class="emojie">👨‍👧‍👦</p>
      <p class="info"><%=@menu.number_of_people%></p>
    </div>
    <div class="menu_bar_settings">
      <p class="emojie">💶</p>
      <p class="info"><%=@menu.budget %></p>
    </div>
  </div>

  <div data-controller="locks" data-locks-menu-id-value ="<%= @menu.id %>" data-locks-recipe-number-value ="<%= @menu.number_of_recipes %>">
    <div data-locks-target="recipes">
      <%= render "recipes/recipes", recipes: @recipes %>
    </div>

      <button data-locks-target="shuffle" data-action="click->locks#getMoreRecipes">
        <p class="">New Recipes</p>
      </button>

    <%= link_to menu_menu_recipes_create_all_path(@menu) do %>
      <div class="btn-primary generate-disabled" data-locks-target="btn">
        <p class="btn-text">Select Recipes</p>
        <div class="round_btn">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
          </svg>
        </div>
      </div>
    <% end %>

  </div>
  <div class="menu">
    <%= link_to root_path do %>
      <%= image_tag "svg_file/home.svg"%>
    <% end %>
        <div class="group_menu">
        <%= link_to menu_menu_recipes_create_all_path(@menu) do %>
            <div class="bounce">
            <h2>Let's Go</h2>
            <%= image_tag "svg_file/arrowb"%>
            </div>
            <%end%>
        </div>
    </div>
</div>
